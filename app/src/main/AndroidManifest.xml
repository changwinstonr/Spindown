<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="affinity.spindown">

    <uses-permission android:name="android.permission.WRITE_SETTINGS"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OnePlayerActivity"></activity>
        <activity android:name=".TwoPlayerActivity"></activity>
        <activity android:name=".ThreePlayerActivity"></activity>
        <activity android:name=".FourPlayerActivity"></activity>
        <activity
            android:name=".CustomPref"
            android:label="@string/settings"></activity>
        <activity android:name=".DieRollActivity"></activity>
    </application>

</manifest>